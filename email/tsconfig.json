{
  "compilerOptions": {
    "strict": false,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
